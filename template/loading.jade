style
	:stylus
		body,html
			margin: 0;-webkit-font-smoothing: antialiased;background:#68ABAD;text-align: center
		.solar
			margin: 250px auto 350px;height: 50px;width: 50px;background: orange;border-radius: 25px;position:relative;-webkit-animation:glow 1.5s linear infinite;-moz-animation:glow 1.5s linear infinite;
			i
				border-radius: 250px;display:block;position:absolute;border: 1px solid rgba(255,255,255, 0.15);box-sizing: border-box;-moz-box-sizing: border-box;-webkit-transform-origin: 50% 50%;-moz-transform-origin: 50% 50%;
				&:before
					content:'';border-radius: 25px;background: black;display: block;position:absolute;top: -5px;right: 45%;
				&.mercury
					width: 80px;height: 80px;margin-left: -40px;left: 50%;top: 50%;margin-top: -40px;-webkit-animation:orbit .5s linear infinite;-moz-animation:orbit .5s linear infinite;
					&:before
						background: #6F5F5F;height: 7px;width: 7px;
				&.venus
					width: 110px;height: 110px;margin-left: -55px;left: 50%;top: 50%;margin-top: -55px;-webkit-animation:orbit 1s linear infinite;-moz-animation:orbit 1s linear infinite;
					&:before
						background: #E7A71F;height: 10px;width: 10px;
				&.earth
					width: 140px;height: 140px;margin-left: -70px;left: 50%;top: 50%;margin-top: -70px;-webkit-animation:orbit 1.5s linear infinite;-moz-animation:orbit 1.5s linear infinite;
					&:before
						background: #63BEE2;height: 10px;width: 10px;
				&.mars
					width: 170px;height: 170px;margin-left: -85px;left: 50%;top: 50%;margin-top: -85px;-webkit-animation:orbit 2s linear infinite;-moz-animation:orbit 2s linear infinite;
					&:before
						background: red;height: 10px;width: 10px;
				&.belt
					box-sizing: border-box;-moz-box-sizing: border-box;border-width: 25px;width: 240px;height: 240px;margin-left: -120px;border-color: rgba(36, 35, 35, 0.21);left: 50%;top: 50%;margin-top: -120px;
				&.jupiter
					width: 260px;height: 260px;margin-left: -130px;left: 50%;top: 50%;margin-top: -130px;-webkit-animation:orbit 2.5s linear infinite;-moz-animation:orbit 2.5s linear infinite;
					&:before
						background: #CF9B2B;top: -15px;height: 30px;width: 30px;
				&.saturn
					width: 320px;height: 320px;margin-left: -160px;left: 50%;top: 50%;margin-top: -160px;-webkit-animation:orbit 3s linear infinite;-moz-animation:orbit 3s linear infinite;
					&:before
						background: #CF7A2B;top: -10px;height: 20px;width: 20px;
					&:after
						background: #fff;width: 30px;height: 1px;content: '';position: absolute;display: block;background: #FFF;width: 30px;height: 1px;content: '';right: 43.5%;-webkit-transform:rotate(20deg);-moz-transform:rotate(20deg);
				&.uranus
					width: 360px;height: 360px;margin-left: -180px;left: 50%;top: 50%;margin-top: -180px;-webkit-animation:orbit 3.5s linear infinite;-moz-animation:orbit 3.5s linear infinite;
					&:before
						background: #10C593;top: -8px;height: 15px;width: 15px;
				&.neptune
					width: 400px;height: 400px;margin-left: -200px;left: 50%;top: 50%;margin-top: -200px;-webkit-animation:orbit 4s linear infinite;-moz-animation:orbit 4s linear infinite;
					&:before
						background: #1470E4;top: -8px;height: 15px;width: 15px;
		@keyframes orbit
			0%
				transform:rotate(0deg)
			50%
				transform:rotate(-180deg)
			100%
				transform:rotate(-360deg)
		@keyframes glow
			0%
				box-shadow:none
			50%
				background: #FFEB00;box-shadow: 0 0 20px orange;
			100%
				box-shadow: none